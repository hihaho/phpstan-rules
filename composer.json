{
    "name": "hihaho/phpstan-rules",
    "description": "Hihaho PHPStan rules according to the guidelines (https://guidelines.hihaho.com)",
    "type": "phpstan-extension",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hihaho\\PhpstanRules\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "authors": [
        {
            "name": "Robert Boes",
            "email": "2871897+RobertBoes@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "phpstan/phpstan": "^1.10",
        "illuminate/support": "^10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "nikic/php-parser": "^4.17",
        "spatie/invade": "^2.0",
        "illuminate/http": "^10.24",
        "illuminate/console": "^10.24",
        "illuminate/mail": "^10.24"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
