{
    "name": "hihaho/phpstan-rules",
    "description": "Hihaho PHPStan rules according to the guidelines",
    "homepage": "https://guidelines.hihaho.com",
    "type": "phpstan-extension",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hihaho\\PhpstanRules\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "authors": [
        {
            "name": "Robert Boes",
            "email": "2871897+RobertBoes@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "phpstan/phpstan": "^1.10",
        "illuminate/support": "^10",
        "laravel/pint": "^1.13.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "nikic/php-parser": "^5.0",
        "spatie/invade": "^2.0",
        "illuminate/http": "^10",
        "illuminate/console": "^10",
        "illuminate/mail": "^10",
        "illuminate/notifications": "^10",
        "illuminate/routing": "^10"
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
